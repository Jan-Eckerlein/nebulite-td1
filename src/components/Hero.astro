---
import RichText from '../cms/ui_fields/RichText.svelte';
import Image from '../cms/ui_fields/Image.svelte';
import Hero from './Hero.vue'

const {edit} = Astro.props;

---

<Hero>
	<Image 
		slot="image" 
		client:load 
		{edit}
	/>
	<RichText 
		slot="text" 
		client:load 
		value="text" 
		{edit}
	/>
</Hero>